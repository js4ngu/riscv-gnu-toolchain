{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RISC-V QEMU Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/jongsang/riscv-gnu-toolchain/hello_gdb.elf", // Adjust the path to your compiled binary
            "miDebuggerPath": "/path/to/riscv64-unknown-elf-gdb", // Adjust this to the path of your RISC-V GDB
            "args": [],
            "stopAtEntry": false,
            "cwd": "/home/jongsang/riscv-gnu-toolchain",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "targetArchitecture": "riscv64",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "customLaunchSetupCommands": [
                {
                    "text": "target remote :1234"
                }
            ],
            "preLaunchTask": "qemu-start",
            "postLaunchTask": "qemu-stop",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "launchCompleteCommand": "exec-run",
            "serverStarted": "localhost:1234",
            "visualize": false
        }
    ]
}